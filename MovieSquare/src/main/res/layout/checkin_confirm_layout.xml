<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/score_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            android:padding="3dp"/>
    <ImageView android:id="@+id/SpacerImage" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"></ImageView>
    <ImageView android:id="@+id/score_icon" android:layout_width="16px" android:layout_height="16px"></ImageView>
    <TextView
            android:id="@+id/score_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:textStyle="bold"
            android:padding="3dp"/>
</LinearLayout>